<h1>New game</h1>
<div class="container">
  <div class = "letters-wrapper">
    <% @letters.each do |letter| %>
      <p class = "letter"><%= letter %></p>
    <% end %>
  </div>
  <p class = "ask-user">What is the longest word you can find?</p>
  <form action="/score" method="post">
  <input type="hidden" name="grid" value="<%= @letters.join%>">
  <input type="text" name="word" placeholder="Your word" class = "word-input">
  <input type="submit" value="Play!" class = "btn">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
</div>